@{ 
    Layout = null;
}
<html>
<head>
    <title>Welcome</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="~/Content/css/normalize.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/scripts/js/index.js"></script>
    <script src="~/scripts/js/prefixfree.min.js"></script>
</head>
<body>

    <div class="wrapper">
        <div class="login">
            <p class="title">Welcome</p>

            <p>Welcome <span style="font-family:Arial, Helvetica, sans-serif;font-style:italic; text-transform: uppercase; font:700;">@Session["username"]!</span></p>

            <br />
            <button>
                <i class="spinner"></i>
                <span class="state">@Html.ActionLink("Logout", "Logout", "Account", new { @style = "color:#fff; font-size: 1.0em;" })</span>
            </button>
        </div>

    </div>

</body>
</html>

